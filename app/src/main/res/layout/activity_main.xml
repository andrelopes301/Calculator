<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:padding="16dp"
    >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="64dp"
    >

        <TextView
            android:id="@+id/expressao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#B0FFFFFF"
            android:padding="6dp"
            android:singleLine="true"
            android:text=""
            android:textAlignment="textEnd"
            android:textSize="30sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp">

        <TextView
            android:id="@+id/resultado"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#B0FFFFFF"
            android:padding="6dp"
            android:paddingRight="16dp"
            android:text=""
            android:textAlignment="textEnd"
            android:textSize="28sp" />
    </TableRow>



    <TableRow
        android:layout_width="match_parent"
        android:layout_marginTop="70dp"
        android:layout_marginHorizontal="12dp">

        <Button
            android:id="@+id/apagar"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="0.3"
            android:text="AC"
            android:textSize="24sp"
            android:onClick="onAC"
            />

        <Button
            android:id="@+id/MaisOuMenos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="0.3"
            android:text="+/-"
            android:textSize="24sp"
            android:onClick="onMaisMenos"
            />

        <Button
            android:id="@+id/percent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="0.3"
            android:text="%"
            android:textSize="24sp"
            android:onClick="onPercentage"
            />



        <Button
            android:id="@+id/divisao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="0.3"
            android:text="/"
            android:textSize="24sp"
            android:onClick="onDivisao"
            />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_marginHorizontal="12dp">

        <Button
            android:id="@+id/sete"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="0.3"
            android:text="7"
            android:textSize="24sp"
            android:onClick="on7"
            />
        <Button
            android:id="@+id/oito"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="8"
            android:textSize="24sp"
            android:onClick="on8"
            />
        <Button
            android:id="@+id/nove"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="9"
            android:textSize="24sp"
            android:onClick="on9"
            />

        <Button
            android:id="@+id/multiplicacao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:layout_marginStart="4dp"
            android:text="*"
            android:textSize="24sp"
            android:onClick="onMultiplicacao"
            />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_marginHorizontal="12dp">

        <Button
            android:id="@+id/quatro"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="0.3"
            android:text="4"
            android:textSize="24sp"
            android:onClick="on4"
            />
        <Button
            android:id="@+id/cinco"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="5"
            android:textSize="24sp"
            android:onClick="on5"
            />
        <Button
            android:id="@+id/seis"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="6"
            android:textSize="24sp"
            android:onClick="on6"
            />
        <Button
            android:id="@+id/subtracao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:layout_marginStart="4dp"
            android:text="-"
            android:textSize="24sp"
            android:onClick="onSubtracao"
            />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_marginHorizontal="12dp">

        <Button
            android:id="@+id/um"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="0.3"
            android:text="1"
            android:textSize="24sp"
            android:onClick="on1"
            />
        <Button
            android:id="@+id/dois"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="2"
            android:textSize="24sp"
            android:onClick="on2"
            />
        <Button
            android:id="@+id/tres"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="3"
            android:textSize="24sp"
            android:onClick="on3"
            />
        <Button
            android:id="@+id/soma"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:layout_marginStart="4dp"
            android:text="+"
            android:textSize="24sp"
            android:onClick="onSoma"
            />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_marginHorizontal="12dp">

        <Button
            android:id="@+id/zero"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="0.6"
            android:text="0"
            android:textSize="24sp"
            android:onClick="on0"
            />

        <Button
            android:id="@+id/ponto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="."
            android:textSize="24sp"
            android:onClick="onPonto"
            />
        <Button
            android:id="@+id/igual"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:layout_marginStart="4dp"
            android:text="="
            android:textSize="24sp"
            android:onClick="onResultado"
            />

    </TableRow>




</TableLayout>